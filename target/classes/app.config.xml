<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
 http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
    
    <bean class="stockfortuneteller.app.Main">
        <property name="tasks">
            <list>
                <bean class="stockfortuneteller.data.StockDataBuilder">
                </bean>                
            </list>
        </property>
    </bean>
         
    <bean id="stockDataBuilder" class="stockfortuneteller.data.StockDataBuilder">
        <property name="companies">
            <list>
                <bean id="company1" class="stockfortuneteller.data.Company">
                    <property name="name" value="Lotos"/>
                    <property name="infoURL" value="http://www.money.pl/gielda/spolki_gpw/grupa;lotos;sa,lts,emitent,1.html"/>
                </bean>
                <bean id="company2" class="stockfortuneteller.data.Company">
                    <property name="name" value="test"/>
                    <property name="infoURL" value="test2"/>
                </bean>          
            </list>
        </property>
    </bean>
</beans>
